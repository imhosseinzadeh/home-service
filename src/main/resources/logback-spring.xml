<configuration>

    # Console appender
    <appender name="LogToConsole" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            # Pattern of log message for console appender
            <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %m%n</Pattern>
        </layout>
    </appender>

    # File appender
    <appender name="LogToFile" class="ch.qos.logback.core.FileAppender">
        <file>HomeServiceProvider.logback.log</file>
        <append>true</append>
        <encoder>
            # Pattern of log message for file appender
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %m%n</pattern>
        </encoder>
    </appender>

    <!--
        # Override log level for specified package
        <logger name="ir.maktab.homeserviceprovider" level="ERROR"/>
    -->

    <root level="INFO">
        <appender-ref ref="LogToConsole"/>
        <appender-ref ref="LogToFile"/>
    </root>

</configuration>